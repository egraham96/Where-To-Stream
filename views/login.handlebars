     </header>


<!--Sign In Modal-->
    <div class="modal">
        <div class="modal-background"></div>
         <div class="modal-content">
            <div class="container">
            <div class="brand-logo"><img src="/images/tvlogo.png"></div>
            <div class="inputs">
            <h2>Login</h2>
            <form>
                    <label>Email:</label>

                    <div>
                        <input type="text" placeholder="Email" id="modal-email">
                    </div>
                    <div>
                        <label>Password:</label>

                        <div>
                            <input type="password" placeholder="Password" id="modal-password">
                        </div>
                <div>
                    <br>
                    </div>
                    <button id="modal-login-button">Sign In!</button>
                </div>
                <br><br>
                <div class='footermodal'>
                    Don't have an account? <a href="/signup">Sign up here!</a>
                </div>
            </form>
            </div>
        </div>
    </div>
    


<script src="/js/login.js"></script>

