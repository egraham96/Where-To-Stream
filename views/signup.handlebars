<!--Sign Up Modal-->
    <div class="modal">
        <div class="modal-background"></div>
         <div class="modal-content">
            <div class="container">
            <div class="brand-logo"><img src="/images/logo2.ico"></div>
            <div class="brand-title"></div>
            <div class="inputs">
            <h2>Sign Up</h2>
            <form>
                <div>
                    <label>Email</label>
                    <div>
                        <input type="text" placeholder="Email" id="modal-email-signup">
                    </div>
                <div>
                    <label>Username</label>
                    <div>
                        <input type="text" placeholder="Username" id="modal-username-signup">
                    </div>
                    <div>
                        <label>Password</label>
                        <div>
                            <input type="password" placeholder="Password" id="modal-password-signup">
                        </div>
                 <div>
                    <br>
                    </div>
                    <button id="modal-signup-button">Sign Up!</button>
                </div>
                <br><br>
                <div class="footermodal">
                    Already have an account? <a href="/login">Login here!</a>
                </div>
            </form>
        </div>
    </div>
    </div>



<script src="/js/signup.js"></script>

